{
"manifest_version": 2,
    "name": "NoSchwa",
    "description": "Questa estensione sostituisce il simbolo schwa con il plurale generico maschile nelle pagine web.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "replace.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
            "default_icon": "ico/128.png"
    }
}
